<dataConfig>
    <dataSource driver="${jdbc.driver}" url="${jdbc.url}" user="${jdbc.username}" password="${jdbc.password}" />
    <document>
        <entity name="user" query="select * from users_view"
                deltaQuery="select id from users_view where modified_at > '${dataimporter.last_index_time}'"
				deletedPkQuery="select id from fim_user where status = 'SCHEDULED_FOR_DELETE'">

            <field name="id" 			column="id" />
            <field name="firstName" 	column="first_name" />
            <field name="lastName" 		column="last_name" />
            <field name="email" 		column="email" />
            <field name="status" 		column="status" />
            <field name="defaultRole" 	column="default_role" />
            <field name="createdAt" 	column="created_at" />
            <field name="modifiedAt" 	column="modified_at" />

        </entity>
    </document>
</dataConfig>

