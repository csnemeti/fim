<dataConfig>
    <dataSource driver="${jdbc.driver}" url="${jdbc.url}" user="${jdbc.username}" password="${jdbc.password}" readOnly="true" batchSize="100" />
    <document>
        <entity name="user" query="select * from active_users_view"
				deltaImportQuery="select * from active_users_view where ID=${dih.delta.id}"
                deltaQuery="select id from active_users_view where modified_at &gt; '${dataimporter.last_index_time}'"
				deletedPkQuery="select id from fim_user where status != 'ACTIVE'">

            <field name="firstName" 		column="first_name" />
            <field name="lastName" 			column="last_name" />
            <field name="email" 			column="email" />
            <field name="defaultRole" 		column="default_role" />
            <field name="nameAndEmail" 		column="name_and_email" />
            <field name="projectsAndRoles" 	column="projects_and_roles" />
            <field name="createdAt" 		column="created_at" />
            <field name="modifiedAt" 		column="modified_at" />

        </entity>
    </document>
</dataConfig>

