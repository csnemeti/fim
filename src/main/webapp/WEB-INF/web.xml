	<filter>
		<filter-name>DataTablesRequestFilter</filter-name>
		<filter-class>pfa.alliance.fim.servlets.DataTablesRequestFitler</filter-class>
		<init-param>
			<param-name>transferColumnsParams</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>DataTablesRequestFilter</filter-name>
		<url-pattern>/user/search</url-pattern>
		<url-pattern>/user/search/*</url-pattern>
		<url-pattern>/project/search</url-pattern>
		<url-pattern>/project/search/*</url-pattern>
	</filter-mapping>
 -->	
	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<display-name>Filter used for changing Locale</display-name>
		<filter-name>LocaleChangeFilter</filter-name>
		<filter-class>pfa.alliance.fim.web.servlets.LocaleChangeFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LocaleChangeFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>LocaleChangeFilter</filter-name>
		<servlet-name>StripesDispatcher</servlet-name>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
	<filter>
		<display-name>Stripes Filter</display-name>
		<filter-name>StripesFilter</filter-name>
		<filter-class>net.sourceforge.stripes.controller.StripesFilter</filter-class>
		<init-param>
			<param-name>Configuration.Class</param-name>
			<param-value>com.silvermindsoftware.sg.config.GuiceRuntimeConfiguration</param-value>
		</init-param>
		<init-param>
			<param-name>ActionBeanContextFactory.Class</param-name>
			<param-value>com.silvermindsoftware.sg.controller.GuiceActionBeanContextFactory</param-value>
		</init-param>
		<init-param>
			<param-name>ActionResolver.Class</param-name>
			<param-value>com.silvermindsoftware.sg.controller.GuiceActionResolver</param-value>
		</init-param>
		<init-param>
			<param-name>Extension.Packages</param-name>
			<param-value>com.silvermindsoftware.sg.extension,pfa.alliance.fim.web.stripes.extensions</param-value>
		</init-param>
		<init-param>
			<param-name>ActionResolver.Packages</param-name>
			<param-value>pfa.alliance.fim.web.stripes.action.user,pfa.alliance.fim.web.stripes.action.project,pfa.alliance.fim.web.stripes.action.issue</param-value>
		</init-param>
		<init-param>
			<param-name>Interceptor.Classes</param-name>
			<param-value>
				pfa.alliance.fim.web.stripes.interceptor.SecurityInterceptor
			</param-value>
		</init-param>
		<init-param>
            <param-name>LocalePicker.Class</param-name>            
			<param-value>pfa.alliance.fim.web.stripes.StripesLocalePicker</param-value>
        </init-param>
		<init-param>
			<param-name>LocalePicker.Locales</param-name>
			<param-value>en:UTF-8,ro:UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>StripesFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>StripesFilter</filter-name>
		<servlet-name>StripesDispatcher</servlet-name>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>

	<servlet>
		<servlet-name>StripesDispatcher</servlet-name>
		<servlet-class>net.sourceforge.stripes.controller.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>StripesDispatcher</servlet-name>
		<url-pattern>/user/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StripesDispatcher</servlet-name>
		<url-pattern>/project/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StripesDispatcher</servlet-name>
		<url-pattern>/issue/*</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<taglib>
		    <taglib-uri>fimSecurity</taglib-uri>   
		    <taglib-location>/WEB-INF/tlds/security.tld</taglib-location>      
		</taglib>		
	</jsp-config>
	 	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>secure</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	
</web-app>