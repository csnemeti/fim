<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<listener>
		<listener-class>pfa.alliance.fim.web.servlets.LogInitializerListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.silvermindsoftware.sg.context.GuiceContextListener</listener-class>
	</listener>
	<context-param>
		<param-name>GuiceInjectorFactory.Class</param-name>
		<param-value>pfa.alliance.fim.web.servlets.FimGuiceInjectorFactory</param-value>
	</context-param>


	<filter>
		<display-name>Filter used for change character encoding</display-name>
		<filter-name>SetCharacterEncodingFilter</filter-name>
		<filter-class>pfa.alliance.fim.web.servlets.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SetCharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
