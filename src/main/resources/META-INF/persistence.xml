<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0" >

    <!-- A JPA Persistence Unit -->
    <persistence-unit name="fimJpaUnit" transaction-type="RESOURCE_LOCAL">
        <!--  Provider definition in persistence.xml is optional. 
        We need to define it only for the case when we have several providers and for choose the one we want to use.
        We use one for running application (BatooJPA) and one for generate schema (Hibernate).
        One id compilation dependency the other is buildscript dependency and we're fine now...
        So... leave these lines commented and make sure these two never meet each other!
        <provider>org.batoo.jpa.core.BatooPersistenceProvider</provider>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>  
        -->

        <!-- JPA entities must be registered here -->
        <class>pfa.alliance.fim.model.user.User</class> 
        <class>pfa.alliance.fim.model.user.UserLogin</class> 
        <class>pfa.alliance.fim.model.user.UserOneTimeLink</class>
        <class>pfa.alliance.fim.model.user.PermissionToRole</class> 
 
        <class>pfa.alliance.fim.model.project.UserProjectRelation</class> 
        <class>pfa.alliance.fim.model.project.Project</class> 
<!--         
        <class>pfa.alliance.fim.model.project.ProjectComponent</class> 
        <class>pfa.alliance.fim.model.project.ProjectLabel</class>
 -->         
         
        <class>pfa.alliance.fim.model.issue.states.IssueState</class>
        <class>pfa.alliance.fim.model.issue.states.IssueStateLocalized</class>
        <class>pfa.alliance.fim.model.issue.states.IssueStateRelation</class>
        <class>pfa.alliance.fim.model.issue.IssueFlow</class>
        <class>pfa.alliance.fim.model.issue.IssuePriority</class> 


        <validation-mode>AUTO</validation-mode>
		<!--  We suppose to provide these values on-the-fly -->
    	<properties>
    	<!-- 
        	<property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
        	<property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/test" />
        	<property name="javax.persistence.jdbc.user" value="sa" />
        	<property name="javax.persistence.jdbc.password" value="" />
         -->
         	<property name="org.batoo.jpa.ddl" value="NONE" />
    	</properties>    	 
    </persistence-unit>

</persistence>